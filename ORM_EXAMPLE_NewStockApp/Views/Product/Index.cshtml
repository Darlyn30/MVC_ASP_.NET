@model List<Application.ViewModels.ProductViewModel>
@{
    ViewData["Title"] = "Products";
}

<div class="container-fluid">

    <div class="row mb-3">
        <div class="col-3 offset-9">
            <a asp-controller="Product" asp-action="Create" class="btn btn-outline-success">Create new Product</a>
        </div>
    </div>

    <div class="row">

        @if (Model == null || Model.Count == 0)
        {
            <h2>there's not Products'</h2>
        }
        else
        {
            @foreach (Application.ViewModels.ProductViewModel item in Model)
            {
                <div class="col-4">
                    <div class="card shadow-sm">
                        <img class="bd-placeholder-img card-img-top" src="@item.ImagePath" alt="product img" />
                        <div class="card-body">
                            <h4>@item.Name</h4>
                            <p class="card-text">@item.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-controller="Product" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Edit</a>
                                    <a asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                                </div>
                                <small class="fw-bold fs-6">$@item.Price</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }



    </div>
</div>