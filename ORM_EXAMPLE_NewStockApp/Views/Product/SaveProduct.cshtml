@model Application.ViewModels.SaveProductViewModel;
@{
	bool editMode = Model.Id == 0 ? false : true;
	ViewData["Title"] = "Save Product";
}

<div class="container-fluid">
	<div class="row">
		<div class="col-6 offset-3">
			<div class="card">
				<div class="card-header bg-dark text-light">
					<h4>@(editMode ? $"Product is editing: {Model.Name}" : "New Product")</h4>
					<div class="card-body">

						<form method="post" asp-controller="Product" asp-action="@(editMode ? "Edit":"Create")">
							<div class="mb-3">
								<label asp-for="Name" class="form-label">Name: </label>
								<input type="text" asp-for="Name" class="form-control"/>
								<span asp-validation-for="Name" class="text-danger"></span>
							</div>

							<div class="mb-3">
								<label asp-for="Description" class="form-label">Description: </label>
								<textarea type="text" asp-for="Description" class="form-control"></textarea>
							</div>

							<div class="mb-3">
								<label asp-for="ImagePath" class="form-label">Image Path: </label>
								<input type="text" asp-for="ImagePath" class="form-control" />
								<span asp-validation-for="Name" class="text-danger"></span>
							</div>

							<div class="mb-3">
								<label asp-for="Price" class="form-label">Price: </label>
								<input type="text" step="any" asp-for="Price" class="form-control" />
								<span asp-validation-for="Name" class="text-danger"></span>
							</div>

							<div class="mb-3">
								<label asp-for="CategoryId" class="form-label">Category: </label>
								<select asp-for="CategoryId" class="form-select">
									<option value="">Choose a option</option>
									<option value="1">Category 1</option>
									<option value="2">Category 2</option>
								</select>
							</div>

							<input type="hidden" asp-for="Id"/>

							<button type="submit" class="btn btn-primary">Save</button>
							<a asp-controller="Product" asp-action="Index" class="btn btn-warning">Go Back</a>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>